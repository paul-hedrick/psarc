    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++.exe Build and Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/dbg/${workspaceFolderBasename} ",
            "args": ["-v"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "g++ Debug"
        },
        {
            "name": "g++.exe Build and Run",
            "type": "cppdbg",
            "request": "launch",
            "program":"${workspaceFolder}/bin/rls/${workspaceFolderBasename} ",
            "args": ["-v"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "g++ Release"
        }
    ]
}